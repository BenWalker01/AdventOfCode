{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Rust Debugger (Debug Binary)",
      "type": "lldb",
      "request": "launch",
      "cargo": {
        "args": [
          "build",
          "--bin=AdventOfCode",
          "--package=AdventOfCode"
        ],
        "filter": {
          "name": "AdventOfCode",
          "kind": "bin"
        }
      },
      "args": ["solve", "2015/1"],
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,
      "console": "integratedTerminal",
      "sourceLanguages": ["rust"]
    },
